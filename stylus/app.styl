@require 'CJ'
@require 'fonts'

body
    @extends .oh
    background #222
    font-family special

    > div:first-child
        @extends .abs
        bottom 0
        left -10px
        width 100%
        color #555
        z-index 1
        font-size 150px
        line-height .4
        letter-spacing -8px

    &.not-ready
        font-family $font-family

        $color = #555

        > div:first-child
            @extends .ta-left
            transform translateY( 50% )
            font-size 28px
            left 0
            bottom 50%
            color $color
            letter-spacing 0
            line-height 1.231
            padding-left 75px

            span
                border-bottom 1px solid $color
                cursor pointer
