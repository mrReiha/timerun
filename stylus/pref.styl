@require 'CJ'

header
    @extends .rel
    padding 15px
    background linear-gradient( to bottom right, #c0ec91, darken( #c0ec91, 10% ) )
    border 1px solid darken( #c0ec91, 10% )

    img
        max-width 100%
        max-height 100%

    .left
        width 60px

    .right
        @extends .ta-left
        margin-top 17px
        width calc( 100% - 80px )

        h2
            color #111
            margin-bottom 5px
            margin-top -10px

        span
            color #444
            text-shadow 0 1px 0 rgba( #fff, .6 )
            font-size 11px

    .notif
        @extends .abs
        right 0
        bottom -35px
        font-size 12px
        color #6AC259
        opacity 0
        transition .5s

        &.show
            opacity 1

        *
            @extends .vm

        .tick
            @extends .dib
            width 12px
            height 12px
            margin-right 5px
            background url( '../image/checked.svg' ) no-repeat center center

form
    padding-top 20px

    > select
        width 80px
        padding 2px 1px
        margin-right 3px

        &:first-of-type
            margin-left 10px

        &:last-child
            margin-right 0

    > label
        @extends .db
        margin-top 10px

        select
            width 80px
            padding 2px 1px
            margin-left 3px
