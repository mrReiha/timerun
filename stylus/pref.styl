@require 'CJ'

header
    padding 15px
    background linear-gradient( 45deg, #c0ec91, darken( #c0ec91, 10% ) )

    img
        max-width 100%
        max-height 100%

    .left
        width 40px

    .right
        @extends .ta-left
        width calc( 100% - 60px )

        h2
            color #111
            margin-bottom 2px
            margin-top -2px

        span
            color #444
            text-shadow 0 1px 0 #e9e9e9
            font-size 11px

form
    padding-top 20px

    > select
        width 80px
        padding 2px 1px
        margin-right 3px

        &:first-of-type
            margin-left 10px

        &:last-child
            margin-right 0

    > label
        @extends .db
        margin-top 10px

        select
            width 80px
            padding 2px 1px
            margin-left 3px
